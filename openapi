openapi: 3.0.0
info:
  title: OCRopus API
  description: An API to perform OCR using OCRopus on uploaded images.
  version: 1.0.0
servers:
  - url: http://localhost:5000
    description: Local server
paths:
  /ocr:
    post:
      summary: Perform OCR on an uploaded image
      requestBody:
        required: true
        content:
          multipart/form-data:
            schema:
              type: object
              properties:
                image:
                  type: string
                  format: binary
                  description: The image file to be processed
      responses:
        '200':
          description: Successful OCR extraction
          content:
            application/json:
              schema:
                type: object
                properties:
                  text:
                    type: string
                    description: The extracted text from the image
        '400':
          description: Invalid request
        '500':
          description: Internal server error
components:
  schemas:
    ErrorResponse:
      type: object
      properties:
        error:
          type: string
          description: Error message
